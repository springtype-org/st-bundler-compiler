{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitHelpers": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": ["src", "e2e", "jest.config.js"]
}
